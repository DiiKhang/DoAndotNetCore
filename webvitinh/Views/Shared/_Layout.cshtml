        <script type="text/javascript" src="~/Client/js/move-top.js"></script>
        <script type="text/javascript" src="~/Client/js/easing.js"></script>
        <script type="text/javascript" src="~/Client/js/startstop-slider.js"></script>
    </Environment>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                @await Component.InvokeAsync("TopMenu")
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/" rel="nofollow"><img src="~/Assets/Client/images/logo.png" alt="" /></a>
                </div>
                @await Component.InvokeAsync("HeaderCart")
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @await Component.InvokeAsync("MainMenu")
                <div class="search_box">
                    <form action="/Search" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Gõ từ khoá"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide", required: false)
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        @await Component.InvokeAsync("Footer")
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    <script src="~/Client/js/Controller/BaseController.js"></script>
    @RenderSection("jsFooter", required: false)
